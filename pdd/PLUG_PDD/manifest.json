{
  "manifest_version": 2,
  "name": "PDD商品信息采集",
  "description": "PDD商品信息采集",
  "version": "0.8",
  "icons": {
    "16": "./icons/icon16.png",
    "48": "./icons/icon48.png",
    "128": "./icons/icon128.png"
  },

  "browser_action": {
    "default_title" : "多多插件",
    "default_icon": "./icons/icon48.png",
	"default_popup": "popup.html"
  },
  "permissions": [
    "*://*/*",
    "storage","notifications","cookies","tabs","webRequest"
  ],
  "background" : {
    "scripts" : ["./js/jquery.min.js","./js/background.js"],
    "popup" : "background.html"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["./js/jquery.min.js","./js/hook.js","./js/contentscript.js"],
    "css": []
  }],
  "web_accessible_resources": [
    "js/hook.js"
  ]

}